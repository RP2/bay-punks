---
interface Props {
  day: { day: string; events: any[] };
}
const { day } = Astro.props;
---

<card class="invisible max-w-[75ch]" data-day={day.day}>
  <h2 class="text-3xl font-bold uppercase">{day.day}</h2>
  <ul class="border-accent-foreground list-disc border-t pl-5">
    {
      day.events.map(
        (event: {
          venue: { href: string | URL | null | undefined; text: unknown };
          bands: any[];
          extra: unknown;
        }) => (
          <li>
            <strong class="venue">
              {event.venue.href ? (
                <a
                  class="hover:underline"
                  href={event.venue.href}
                  target="_blank"
                  rel="noopener noreferrer nofollow"
                >
                  {event.venue.text}
                </a>
              ) : (
                event.venue.text
              )}
            </strong>
            {" — "}
            {event.bands.map(
              (
                band: { href: string | URL | null | undefined; text: unknown },
                i: number,
              ) => (
                <span class="artists inline-flex">
                  {band.href ? (
                    <a
                      class="hover:underline"
                      href={band.href}
                      target="_blank"
                      rel="noopener noreferrer nofollow"
                    >
                      {band.text}
                    </a>
                  ) : (
                    band.text
                  )}
                  {i < event.bands.length - 1 && ","} &nbsp;
                </span>
              ),
            )}
            {event.extra && (
              <>
                {" — "}
                <span>{event.extra}</span>
              </>
            )}
          </li>
        ),
      )
    }
  </ul>
</card>
