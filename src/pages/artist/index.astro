---
import Layout from "../../layouts/Layout.astro";
import { Card } from "../../components/ui/card";
import { CardContent } from "../../components/ui/card";
import artists from "../../data/artists.json";
import concerts from "../../data/calendar.json";

// helper to normalize text (remove special characters, lowercase)
function normalizeText(text: string): string {
  return text
    .toLowerCase()
    .replace(/[^a-z0-9\s]/g, "")
    .trim();
}

// get upcoming shows only
const today = new Date();
const todayISOString =
  today.getFullYear() +
  "-" +
  String(today.getMonth() + 1).padStart(2, "0") +
  "-" +
  String(today.getDate()).padStart(2, "0");

// sort artists alphabetically and add upcoming shows info, filter to only artists with upcoming shows
const sortedArtists = artists.artists
  .map((artist) => {
    const nextShow =
      concerts.shows
        .filter((show) => show.normalizedDate >= todayISOString)
        .flatMap((show) =>
          show.events
            .filter((event) =>
              event.bands.some(
                (band) =>
                  band.id === artist.id ||
                  normalizeText(band.text) === normalizeText(artist.name),
              ),
            )
            .map((event) => ({
              ...event,
              date: show.normalizedDate,
              humanDate: show.day,
            })),
        )
        .sort((a, b) => a.date.localeCompare(b.date))[0] || null;

    return {
      ...artist,
      nextShow,
    };
  })
  .filter((artist) => artist.nextShow !== null) // only show artists with upcoming shows
  .sort((a, b) => a.name.localeCompare(b.name));
---

<Layout
  title="Artists with Upcoming Shows"
  description="Browse artists with upcoming shows in the Bay Area"
>
  <div class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <a
        href="/"
        class="text-muted-foreground hover:text-foreground mb-4 inline-flex items-center text-sm hover:underline"
      >
        ‚Üê Back to calendar
      </a>
      <h1 class="text-4xl font-bold">Artists with Upcoming Shows</h1>
      <p class="text-muted-foreground mt-2">
        Browse {sortedArtists.length} artists with upcoming shows in the Bay Area
      </p>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {
        sortedArtists.map((artist) => (
          <Card>
            <CardContent className="p-4">
              <div class="space-y-2">
                <h3 class="font-semibold">
                  <a
                    href={`/artist/${artist.id}/`}
                    class="text-primary hover:underline"
                  >
                    {artist.name}
                  </a>
                </h3>
                {artist.nextShow && (
                  <div class="text-sm">
                    <div class="text-muted-foreground">Next show:</div>
                    <div class="font-medium">
                      <a
                        href={`/day/${artist.nextShow.date}/`}
                        class="text-primary hover:underline"
                      >
                        {artist.nextShow.humanDate}
                      </a>
                    </div>
                    <div class="text-muted-foreground text-xs">
                      <a
                        href={`/venue/${artist.nextShow.venue.id}/`}
                        class="text-muted-foreground hover:underline"
                      >
                        {artist.nextShow.venue.text}
                      </a>
                    </div>
                  </div>
                )}
                <div class="text-muted-foreground text-sm">
                  {artist.venues.length} venue
                  {artist.venues.length !== 1 ? "s" : ""}
                </div>
                {artist.spotifyData?.genres &&
                  artist.spotifyData.genres.length > 0 && (
                    <div class="text-muted-foreground text-xs">
                      {artist.spotifyData.genres.slice(0, 2).join(", ")}
                      {artist.spotifyData.genres.length > 2 && " +more"}
                    </div>
                  )}
                {artist.spotifyData?.followers && (
                  <div class="text-muted-foreground text-xs">
                    {artist.spotifyData.followers.toLocaleString()} followers
                  </div>
                )}
                {artist.spotifyUrl && (
                  <div class="text-sm">
                    <a
                      href={artist.spotifyUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-1 text-green-600 hover:text-green-700 hover:underline"
                    >
                      <svg
                        class="h-3 w-3"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                      >
                        <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.02.6-1.14 4.32-1.32 9.48-1.08 13.02 1.62.42.3.6.84.3 1.2zm.12-3.36c-3.84-2.28-10.14-2.52-13.8-1.38-.6.18-1.26-.12-1.44-.72-.18-.6.12-1.26.72-1.44 4.2-1.32 11.1-1.08 15.48 1.56.54.32.72 1.02.42 1.56-.36.54-1.08.72-1.38.42z" />
                      </svg>
                      Spotify
                    </a>
                  </div>
                )}
              </div>
            </CardContent>
          </Card>
        ))
      }
    </div>
  </div>
</Layout>
